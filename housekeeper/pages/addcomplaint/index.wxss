.revenue{
  background-color: #F8F8F8;
  height: 100%;
}

.box{
  padding-top: 128rpx;
}



.item {
  height: 90rpx;
  background-color: #fff;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #F4F4F4;
}

.item>view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
}

.item>view:nth-child(1)>text:nth-child(2) {
  margin-left: 20rpx;
  color: #00C77A;
  padding-top: 15rpx;
}

.item>view:nth-child(2)>input {
  height: 90rpx;
  width: 300rpx;
  text-align: right;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
}
.sex {
  width: 130rpx;
  height: 60rpx;
  border-radius: 10rpx;
  border: 2rpx solid #55D970;
  display: flex;
}

.sex view {
  width: 66rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #55D970;
}

.active {
  background: #55D970;
  color: #FFFFFF !important;
}


.place {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}

.muban {
  display: flex;
  align-items: center;
}

.muban view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}

.muban image {
  width: 21rpx;
  height: 21rpx;
  margin-left: 15rpx;
}
.item>view:nth-child(2) {
  display: flex;
  align-items: center;
}
 .item>view:nth-child(2)>text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  margin-left: 10rpx;
}
.time{
  display: flex;
}
.time >view{
  width: 400rpx;
  text-align: right;
  color: #A9A9A9;
}

.items textarea {
  width: 100%;
  margin-top: 20rpx;
  height: 150rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
}
.items {
  background-color: #fff;
  padding: 30rpx 30rpx 0 30rpx;
}
.items image{
  width: 160rpx;
  height: 160rpx;
}


.btn {
  width: 750rpx;
  height: 200rpx;
  background-color: #F8F8F8;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}

.btn view {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  background: linear-gradient(270deg, #3BCC8A 0%, #5BDD66 100%);
}



.search {
  width: 750rpx;
  height: 110rpx;
  background-color: #fff;
  /* position: fixed;
  top: 128rpx;
  left: 0; */
  display: flex;
  align-items: center;
}

.search>view {
  width: 690rpx;
  height: 70rpx;
  border-radius: 6rpx;
  background-color: #F5F5F5;
  margin-left: 30rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.search>view>image {
  width: 26rpx;
  height: 26rpx;
  margin: 0 20rpx;
}

.search>view input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #111F37;
}
