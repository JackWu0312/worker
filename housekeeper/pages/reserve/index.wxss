
.box {
  padding-top: 130rpx;
}

.adress {
  width: 750rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  line-height: 70rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.adress>image {
  width: 22rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.tit {
  padding-left: 30rpx;
  height: 90rpx;
  background-color: #F8F8F8;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  display: flex;
  align-items: flex-end;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}

.addpeo {
  color: #5BDD66;
  position: absolute;
  right: 30rpx;
}

.item {
  height: 90rpx;
  background-color: #fff;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #F4F4F4;
}

.items {
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #F4F4F4;
}

.item>view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
}

.item>view:nth-child(1)>text:nth-child(2) {
  margin-left: 20rpx;
  color: #00C77A;
  padding-top: 15rpx;
}

.items>view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  margin-top: 20rpx;
}

.items>view:nth-child(1)>text:nth-child(2) {
  margin-left: 20rpx;
  color: #00C77A;
  padding-top: 15rpx;
}

.items textarea {
  width: 100%;
  margin-top: 20rpx;
  height: 150rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
}


.item>view:nth-child(2) {
  display: flex;
  align-items: center;
}

.item>view:nth-child(2)>text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  margin-left: 10rpx;
}

.item>view:nth-child(2)>input {
  height: 90rpx;
  width: 300rpx;
  text-align: right;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
}

.place {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}


.muban {
  display: flex;
  align-items: center;
}

.muban view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}

.muban image {
  width: 21rpx;
  height: 21rpx;
  margin-left: 15rpx;
}

.select {
  width: 140rpx;
  height: 64rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  border: 2rpx solid #55D970;
  display: flex;
  color: #55D970;
}
.active{
  background: #55D970;
  color: #fff;
}
.select view:nth-child(1) {
  width: 70rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}

.select view:nth-child(2) {
  width: 70rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}

.people {
  width: 750rpx;
  height: 130rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #F4F4F4;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
}

.people image:nth-child(1) {
  width: 75rpx;
  height: 75rpx;
}

.people image:nth-child(3) {
  width: 21rpx;
  height: 21rpx;
  position: absolute;
  right: 30rpx;
}

.people view {
  margin-left: 20rpx;
}

.btn {
  width: 750rpx;
  height: 200rpx;
  background-color: #F8F8F8;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}

.btn view {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  line-height: 90rpx;
  text-align: center;

  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  background: linear-gradient(270deg, #3BCC8A 0%, #5BDD66 100%);
}

.date{
  color: #000000!important;
}
.items image{
  width: 160rpx;
  height: 160rpx;
}