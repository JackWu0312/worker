.login {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login>image {
  margin-top: 150rpx;
  width: 437rpx;
  height: 293rpx;
}

.tips {
  width: 630rpx;
  margin-top: 90rpx;
  margin-bottom: 20rpx;
}

.tips>view:nth-child(1) {
  font-size: 58rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #414141;
}

.tips>view:nth-child(2) {
  font-size: 27rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}

.input {
  width: 630rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #E4E4E4;
  padding: 27rpx 0;
  padding-top: 55rpx;
}

.input image {
  margin-right: 30rpx;
}

.input input {
  flex: 1;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
}

.placeholder {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #E4E4E4;
}

.btn {
  width: 630rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: linear-gradient(270deg, #3BCC8A 0%, #5BDD66 100%);
  border-radius: 45rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  margin-top: 70rpx;
}