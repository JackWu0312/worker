/* pages/mine/index.wxss */
.mine_layout {
  display: flex;
  margin-top: 78rpx;
  margin-right: 40rpx;
  margin-left: 40rpx;
  flex-direction: column;
}

.user_info {
  margin-right: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.user_info_left {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
}

.user_info_left text:nth-child(1) {
  margin-top: 10rpx;
  width: 144rpx;
  height: 48rpx;
  font-size: 48rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #414141;
}

.user_info_left text:nth-child(2) {
  margin-top: 29rpx;
  width: 167rpx;
  height: 26rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #929292;
}

.user_info image {
  width: 130rpx;
  height: 130rpx;
}

.edition_layout {
  margin-top: 119rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.edition_layout text:nth-child(1) {
  width: 128rpx;
  height: 26prx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #404040;
}

.edition_layout text:nth-child(2) {
  margin-left: 22rpx;
  flex: 1;
  width: 67rpx;
  height: 26rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #929292;
}

.edition_layout image:nth-child(3) {
  width: 44rpx;
  height: 42rpx;
}

.line {
  margin-top: 63rpx;
  margin-bottom: 60rpx;
  width: 100%;
  height: 1rpx;
  background-color: #DFDFDF;
}

.exit_layout {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.exit_layout text:nth-child(1) {
  flex: 1;
  width: 128rpx;
  height: 26prx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #404040;
}
.exit_layout image:nth-child(2) {
  width: 44rpx;
  height: 42rpx;
}