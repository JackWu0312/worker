/* pages/order/index.wxss */
.order_layout {
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
  display: flex;
  flex-direction: column;
}

.choice_layout {
  width: 100%;
  height: 70rpx;
  display: flex;
  background-color: #FFFFFF;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.choice_view {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.choice_layout text {
  width: 54rpx;
  height: 30rpx;
  font-size: 27rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #585858;
}

.image_arrow {
  margin-top: 15rpx;
  margin-left: 7rpx;
  width: 15rpx;
  height: 8rpx;
}

.image_sort {
  height: 29rpx;
  width: 30rpx;
}

.item_style {
  background-color: #FFFFFF;
  border-radius: 8rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 25rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  display: flex;
  flex-direction: column;
}

.item_title {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item_title text:nth-child(1) {
  flex: 1;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}

.user_type {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  background-color: #4791F9;
}

.line {
  width: 100%;
  height: 1rpx;
  background-color: #E9ECF1;
}

.appoint_time {
  margin-top: 40rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #4791F9;
}

.item_style text:nth-child(4) {
  margin-top: 40rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}

.item_style text:nth-child(5) {
  margin-top: 40rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}

.item_style text:nth-child(6) {
  margin-top: 40rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}

.item_style text:nth-child(7) {
  margin-bottom: 40rpx;
  margin-top: 40rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}

.images {
  margin-bottom: 30rpx;
}

.img_style {
  height: 150rpx;
  width: 150rpx;
}

.nofound {
  position: relative;
  width: 100%;
  height: 800rpx;
}

.img-box {
  width: 450rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.nofound image {
  width: 450rpx;
  display: inline-block;
}

.nofound text {
  font-size: 27rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
}