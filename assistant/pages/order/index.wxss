.order_layout {
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
  display: flex;
  flex-direction: column;
}

.choice_layout {
  width: 100%;
  height: 70rpx;
  display: flex;
  background-color: #FFFFFF;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.choice_view {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.choice_layout text {
  width: 54rpx;
  height: 30rpx;
  font-size: 27rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #585858;
}

.image_arrow {
  margin-top: 15rpx;
  margin-left: 7rpx;
  width: 15rpx;
  height: 8rpx;
}

.image_sort {
  height: 29rpx;
  width: 30rpx;
}

